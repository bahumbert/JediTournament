@model JediWebApplication.ServiceReference1.JediContract

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

    <div class="col-md-10">
    <h4>JediContract</h4>
    <hr />
    @ViewBag.Jedi.Nom
    <div class="col-md-10">
        IsSith :
        @if (ViewBag.Jedi.IsSith == true)
        {
            <input type="checkbox" checked disabled />
        }
        else {
            <input type="checkbox" disabled />
        }

    </div>
        
    </div>

@foreach (var caracteristique in ViewBag.Caracteristiques)
{
<div class="col-md-10">

    @if (@caracteristique.Nom != null)
    {
        <div>@caracteristique.Nom : @caracteristique.Valeur</div>
    }
</div>
}


<p>
    <a href="../Editer/@ViewBag.Jedi.Id">Editer</a>
    @Html.ActionLink("Back to List", "Index")
</p>
