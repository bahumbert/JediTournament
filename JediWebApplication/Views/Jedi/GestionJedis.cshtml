@{
    ViewBag.Title = "GestionJedis";

}

<h2>GestionJedi</h2>
<div class="stars"></div>
<div class="twinkling"></div>
<div class="clouds"></div>
<div class="row">
    <div class="col-md-12">
        <table class="table tableau ">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Sith/Jedi</th>
                </tr>
            </thead>
            @foreach (var jedi in ViewBag.Jedis)
            {
                <tbody>
                    <tr>
                        <td>@jedi.Nom</td>
                        @if (jedi.IsSith)
                {
                            <td>Sith</td>
                        }
                        else
                        {
                            <td>Jedi</td>
                        }
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>
