@model JediWebApplication.ServiceReference1.MatchContract

@{
    ViewBag.Title = "Editer";
}

<h2>Editer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MatchContract</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.IdJediVainqueur, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="IdJediVainqueur" value="@ViewBag.Matchs.IdJediVainqueur" />
                @Html.ValidationMessageFor(model => model.IdJediVainqueur, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Jedi1.Nom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="Jedi1">
                    @foreach (var jedi in ViewBag.Jedi)
                    {
                        if (@jedi.Nom != null)
                        {

                            <option value="@jedi.Nom">@jedi.Nom</option>

                        }
                    }

                </select>
                @Html.ValidationMessageFor(model => model.Jedi1.Nom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Jedi2.Nom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="Jedi2">
                    @foreach (var jedi in ViewBag.Jedi)
                    {
                        if (@jedi.Nom != null)
                        {

                            <option value="@jedi.Nom">@jedi.Nom</option>

                        }
                    }

                </select>
                @Html.ValidationMessageFor(model => model.Jedi2.Nom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Stade.Nom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="Stade" value="@ViewBag.Matchs.Stade.Nom" />
                @Html.ValidationMessageFor(model => model.Stade.Nom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
